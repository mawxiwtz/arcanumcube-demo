{
  "compilerOptions": {
    "target": "es2020",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2020", "WebWorker"],
    "strict": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "noImplicitOverride": true,
    "noEmit": true,
    "types": ["vite/client", "jest"],
    "baseUrl": ".",
    "paths": {
      "@arcanumcube-demo": ["src/index.ts"],
      "@arcanumcube-demo/*": ["src/*"]
    }
  },
  "include": ["src", "demo", "tests", "vite.config.ts"]
}
